<Window x:Class="Onenote2md.Tester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OneNoteParser.Tester" Height="650" Width="1250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Notebook Name -->
        <Label Content="Notebook Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="notebookBox" Grid.Row="0" Grid.Column="1" Width="100" Text="trash"/>
        <Button x:Name="button2" Grid.Row="0" Grid.Column="2" Content="Get Sections" Width="100" Margin="5,0" Click="button2_Click"/>
        <Button x:Name="button10" Grid.Row="0" Grid.Column="3" Content="Close" Width="100" Margin="5,0" Click="button10_Click"/>
        <Button x:Name="button15" Grid.Row="0" Grid.Column="4" Content="GenerateNotebookMd" Width="130" Margin="5,0" Click="button15_Click"/>

        <!-- Section Name -->
        <Label Content="Section Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="sectionBox" Grid.Row="1" Grid.Column="1" Width="100" Text="Section2"/>
        <Button x:Name="button3" Grid.Row="1" Grid.Column="2" Content="Get Pages" Width="100" Margin="5,0" Click="button3_Click"/>
        <Button x:Name="button12" Grid.Row="1" Grid.Column="3" Content="GenerateMd" Width="100" Margin="5,0" Click="button12_Click"/>
        <Button x:Name="button14" Grid.Row="1" Grid.Column="4" Content="GenerateSectionMd" Width="130" Margin="5,0" Click="button14_Click"/>

        <!-- Page Name -->
        <Label Content="Page Name" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="pageBox" Grid.Row="2" Grid.Column="1" Width="100" Text="Headers"/>
        <Button x:Name="button1" Grid.Row="2" Grid.Column="2" Content="GetChildObjectIDs" Width="100" Margin="5,0" Click="button1_Click"/>
        <Button x:Name="button6" Grid.Row="2" Grid.Column="3" Content="LogChildObjects" Width="100" Margin="5,0" Click="button6_Click"/>
        <Button x:Name="button7" Grid.Row="2" Grid.Column="4" Content="GetPageContent" Width="100" Margin="5,0" Click="button7_Click"/>

        <!-- ObjectID -->
        <Label Content="ObjectID" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="objectBox" Grid.Row="3" Grid.Column="1" Width="100" Text="Headers"/>
        <Button x:Name="button5" Grid.Row="3" Grid.Column="2" Content="Get" Width="100" Margin="5,0" Click="button5_Click"/>

        <!-- Output Directory -->
        <Label Content="Out Directory:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="textBox1" Grid.Row="4" Grid.Column="1" Width="258" Text="C:\Storage\Repositories\Onenote2md\output"/>
        <Button x:Name="button13" Grid.Row="4" Grid.Column="2" Content="GenerateMd" Width="100" Margin="5,0" Click="button13_Click"/>

        <!-- Log and Preview Controls -->
        <ListBox x:Name="logList" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Height="330"/>
        <Button x:Name="clearButton" Grid.Row="5" Grid.Column="3" Content="Clear" Width="75" Margin="5,0" Click="clearButton_Click"/>
        <Button x:Name="button4" Grid.Row="5" Grid.Column="2" Content="Copy" Width="75" Margin="5,0" Click="button4_Click"/>

        <!-- Markdown Preview -->
        <TextBox x:Name="mdPreviewBox" Grid.Row="1" Grid.Column="5" Grid.RowSpan="6" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <Button x:Name="button8" Grid.Row="0" Grid.Column="5" Content="Clear" Width="75" Margin="5,0" Click="button8_Click"/>
        <Button x:Name="button9" Grid.Row="2" Grid.Column="5" Content="Preview MD" Width="100" Margin="5,0" Click="button9_Click"/>
    </Grid>
</Window>
